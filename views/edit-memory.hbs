<div class="form-container">
  <h2>Edit Memory</h2>
  <form action="/edit-memory/{{memory._id}}" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{memory.title}}" required>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" value="{{memory.author}}" required>

    <label for="date">Date:</label>
    <input type="date" id="date" name="date" value="{{memory.date}}" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required>{{memory.description}}</textarea>

    <button type="submit">Save Changes</button>
    <a href="/" class="cancel-button">Cancel</a>
  </form>
</div>
